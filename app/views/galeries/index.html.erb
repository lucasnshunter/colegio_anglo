<p id="notice"><%= notice %></p>



<%= link_to 'criar galeria', new_galery_path,class:"btn btn-success" %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de galerias</h3>
  </div>
  <div class="panel-body">
   <table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galeries.each do |galery| %>
      <tr>
        <td><%= galery.titulo %></td>
        <td><%= galery.data %></td>
        <td><%= link_to 'mostrar', galery,class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_galery_path(galery),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', galery, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>