<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @professore.nome %>
</p>

<p>
  <strong>Disciplina:</strong>
  <%= @professore.disciplina %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @professore.descricao %>
</p>

<p>
  <strong>Nucleo:</strong>
  <%= @professore.nucleo_id %>
</p>

<%= image_tag @professore.photo.url %>
<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Data criacao</th>
      <th>Data prioridade</th>
       <th>Turma</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arquivos.each do |arquivo| %>
      <tr>
        <td><%= arquivo.titulo %></td>
        <td><%= arquivo.descricao.html_safe %></td>
        <td><%= arquivo.data_criacao %></td>
        <td><%= arquivo.data_prioridade %></td>
         <td><%= arquivo.define_turma arquivo.turma %></td>
        
        <td><%=arquivo.professore_id%></td>
        <td><%= link_to 'Mostrar', arquivo,class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_arquivo_path(arquivo),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', arquivo, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
    <%= render 'arquivos/form' %>
<%= link_to 'Editar', edit_professore_path(@professore),class:"btn btn-warning" %> |
<%= link_to "Voltar", nucleo_path(@professore.nucleo_id),class:"btn btn-default" %>

