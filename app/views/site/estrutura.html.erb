<div class="row" style="margin: 0px;">
   <div class="col-sm-12 teambadge text-center">
      <div class="badgearea text-center" id="estrutura_labal">
         <p class="badgeparagraph">Estrutura</p>
      </div>
   </div>
</div>
<div class="container">
   <div class="row struclist">
      <ul class="nav nav-pills nav-stacked">
         <% @estruturas.each do |estrutura| %>
         <a href="#lightbox" data-toggle="modal"  data-slide-to=<%=@cont_estruturas%>>
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" style="margin-top:49px;">
               <div class="strucpic" >
                  <li><%=image_tag estrutura.photo.url,class:"img-responsive"%></li>
               </div>
               <div class="struchover"id="estrutura_foto_base"></div>
               <div class="stuctext"><%=estrutura.titulo %></div>
               <div class="strukeepr"></div>
            </div>
         </a>
         <%@cont_estruturas+=1%>
         <% end %>
      </ul>
   </div>
</div>
<div class="modal fade and carousel slide" id="lightbox">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-body">
            <ol class="carousel-indicators">
               <!-- controlador -->
               <li data-target="#lightbox" data-slide-to="0" class="active"></li>
               <% @estruturas.each do |estrutura| %>
             
               
               <li data-target="#lightbox" data-slide-to=<%=@cont_estruturas.to_s%></li>
           <%@cont_estruturas+=1%>
          
               <% end %>
            </ol>
            
            
            
            
            
            
            
            
            
            <div class="carousel-inner">
               <div class="item active">
                  <%=image_tag @estrutura.photo.url%>
               </div>
               <% @estruturas.each do |estrutura| %>
                   <%if @estrutura.id !=estrutura.id%>
                     <div class="item ">
                        <%=image_tag estrutura.photo.url%>
                         
                     </div>
                   <%end%>
               <% end %>
            </div>
            <!-- /.carousel-inner -->
            <a class="left carousel-control" href="#lightbox" role="button" data-slide="prev"  style="background-color: transparent !important;">
                <br>
                  <br>
                     <br>
                        <br>
                           <br> <br>
                  <br>
                     <br>
                        <br>
                           <br>
                            <br>
                     <br>
                        <br>
                           <br>
           <i class="fa fa-arrow-left" aria-hidden="true"></i>
            </a>
            <a class="right carousel-control" href="#lightbox" role="button" data-slide="next" style="background-color: transparent !important;">
               <br>
                  <br>
                     <br>
                        <br>
                           <br> <br>
                  <br>
                     <br>
                        <br>
                           <br>
                            <br>
                     <br>
                        <br>
                           <br>
           <i class="fa fa-arrow-right" aria-hidden="true"></i>
            </a>
         </div>
         <!-- /.modal-body -->
      </div>
      <!-- /.modal-content -->
   </div>
   <!-- /.modal-dialog -->
</div>
<!-- /.modal -->



<style>
   .modal.and.carousel {
   position: fixed; // Needed because the carousel overrides the position property
   }
</style>


