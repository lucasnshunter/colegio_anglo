<p id="notice"><%= notice %></p>



<%= link_to 'Nova Estrutura', new_estrutura_path,class:"btn btn-primary" %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de estruturas</h3>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Link</th>
      <th>Titulo</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estruturas.each do |estrutura| %>
      <tr>
        <td><%= estrutura.link %></td>
        <td><%= estrutura.titulo %></td>
        <td><%= estrutura.texto %></td>
        <td><%= link_to 'Mostrar', estrutura ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Editar', edit_estrutura_path(estrutura) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Apagar', estrutura, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>