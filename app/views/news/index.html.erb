<p id="notice"><%= notice %></p>


<%= link_to 'Nova noticia', new_news_path ,class:"btn btn-primary"%>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de noticias</h3>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.titulo %></td>
        <td><%= news.texto %></td>
        <td><%= news.link %></td>
        <td><%= link_to 'Mostrar', news ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Editar', edit_news_path(news) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Apagar', news, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>