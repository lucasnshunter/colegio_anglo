<p id="notice"><%= notice %></p>

<%= link_to 'Nova Prova', new_prova_path,class:"btn btn-primary" %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">lista enem </h3>
  </div>
  <div class="panel-body">
  <table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provas.each do |prova| %>
      <tr>
        <td><%= prova.titulo %></td>
        <td><%= prova.texto.html_safe %></td>
        <td><%= prova.link %></td>
        <td><%= link_to 'Mostrar', prova ,class:"btn btn-success"%></td>
        <td><%= link_to 'Editar', edit_prova_path(prova) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Apagar', prova, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>

