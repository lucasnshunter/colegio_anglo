<p id="notice"><%= notice %></p>

<%= link_to 'Nova Photo', new_photo_path,class:"btn btn-primary" %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de fotos</h3>
  </div>
  <div class="panel-body">
   <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data postagens</th>
      <th>Galery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.nome %></td>
        <td><%= photo.data_postagens %></td>
        <td><%= photo.galery_id %></td>
        <td><%= link_to 'mostrar', photo,class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_photo_path(photo),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', photo, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

