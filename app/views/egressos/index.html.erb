<p id="notice"><%= notice %></p>


   <%= link_to 'Novo Egresso', new_egresso_path,class:"btn btn-primary" %>
   <hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de egressos</h3>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Faculdade</th>
      <th>Curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @egressos.each do |egresso| %>
      <tr>
        <td><%= egresso.nome %></td>
        <td><%= egresso.faculdade %></td>
        <td><%= egresso.curso %></td>
        <td><%= link_to 'Mostrar', egresso ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Editar', edit_egresso_path(egresso) ,class:"btn btn-warning"%></td>
        <td><%= link_to 'Apagar', egresso, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>
  </div>
</div>
