<p id="notice"><%= notice %></p>


<%= link_to 'Novo Coladorador', new_coladoradore_path,class:"btn btn-primary" %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de colaboradores</h3>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coladoradores.each do |coladoradore| %>
      <tr>
        <td><%= coladoradore.nome %></td>
        <td><%= coladoradore.cargo %></td>
        <td><%= link_to 'Mostrar', coladoradore ,class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_coladoradore_path(coladoradore),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', coladoradore, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>