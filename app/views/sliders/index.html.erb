<p id="notice"><%= notice %></p>


<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de sliders<br>
    <%= link_to '+', new_slider_path %>
    </h3>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Descricao</th>
      <th>Link</th>
      <th>Frase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr>
        <td><%= slider.titulo %></td>
        <td><%= slider.texto.html_safe %></td>
        <td><%= slider.descricao.html_safe %></td>
        <td><%= slider.link %></td>
        <td><%= slider.frase %></td>
        <td><%= link_to 'Mostrar', slider,class:"btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_slider_path(slider),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', slider, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>