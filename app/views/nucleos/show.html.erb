<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @nucleo.titulo %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @nucleo.descricao %>
</p>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Professores desse nucleo</h3>
  </div>
  <div class="panel-body">
 <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Disciplina</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professores.each do |professore| %>
      <tr>
        <td><%= professore.nome %></td>
        <td><%= professore.disciplina %></td>
        
        <td><%= link_to 'Mostrar', professore,class:"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_professore_path(professore),class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', professore, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
  
  </div>
</div>

    <%= render 'professores/form' %>
<%= link_to 'Editar', edit_nucleo_path(@nucleo),class:"btn btn-warning" %> |
