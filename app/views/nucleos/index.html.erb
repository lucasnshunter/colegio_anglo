<p id="notice"><%= notice %></p>


<%= link_to 'Novo nucleo', new_nucleo_path, class:"btn btn-primary" %>
<hr>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista de nucleos</h3>
  </div>
  <div class="panel-body">
<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nucleos.each do |nucleo| %>
      <tr>
        <td><%= nucleo.titulo %></td>
        <td><%= nucleo.descricao %></td>
        <td><%= link_to 'Mostrar', nucleo ,class:"btn btn-success"%></td>
        <td><%= link_to 'Editar', edit_nucleo_path(nucleo), class:"btn btn-warning" %></td>
        <td><%= link_to 'Apagar', nucleo, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
